#include <iostream>

#include <string>

using namespace std;


int main() {

setlocale(LC_ALL, "Russian"); //Делаем консоль на русском


string daysOfWeek[] = { "Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота", "Воскресенье" }; //Массив с днями недели

string schedule[] = { "Фискультура, физика, английский", //массив с предметами, каждый набор предметов записан отдельным индексом

"Физика, химия, алгебра",

"Геометрия, физика, изо",

"Изо, физкультура, геометрия",

"Физика, алгебра, французский"};


int dayNumber; //Инициализация переменной выбора дня недели


cout << "Введите порядковый номер дня недели (1-7): " << endl; //Цикл, выводящий дни недели на каждую строчку

for (int i = 0; i <= 6; i++) {

cout << (i + 1) << (") ") << (daysOfWeek[i]) << endl;

}


cin >> dayNumber; //Ввод перемененной выбора дня недели


if (dayNumber >= 1 && dayNumber <= 7) { //Условие ввода корректного номера дня недели и вывод дня недели и расписания

cout << "День недели: " << daysOfWeek[dayNumber - 1] << (".") << endl;

cout << "Предметы: " << (schedule[1]) << endl;

}

else {

cout << "Неверный порядковый номер, или введено не число." << endl;

}


return 0;

}

// Программа занимает в оперативной памяти 2 мб
